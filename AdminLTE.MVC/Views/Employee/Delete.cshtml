@model IEnumerable<AdminLTE.Models.Employee>
@{ Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
    ViewData["Title"] = "Employees | Delete";}


<div class="container ">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">List of employees</h2>
        </div>

    </div>
    @if (Model.Count() > 0)
    {
<table class="table table-bordered table-striped my-3 ">
    <thead class="table-dark">
        <tr>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Patronymic
                
            </th>
            <th>
                Territorial coummunity
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td width="20%">@item.Name </td>
            <td width="20%">@item.Surname </td>
            <td width="20%">@item.Patronymic </td>
            <td  width="20%">@item.TerritorialCommunity.Name</td>
            <td width="20%">
                <div class="row px-2">
                    <a class="btn btn-danger col mx-1 mx-lg-3" asp-route-Id="@item.Id" asp-controller="Employee" asp-action="ConfirmDelete">Delete</a>
                </div>
            </td>
        </tr>}
    </tbody>
</table> }
else
{
<p>No employees found.</p>}
</div>
