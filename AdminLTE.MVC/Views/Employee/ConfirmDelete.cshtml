@model AdminLTE.Models.Employee
@{ Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
    ViewData["Title"] = "Employee | Delete";}


<form method="post">

<input asp-for="Id" hidden />
    <div class="container p-3  px-md-5">

        <div class="form-group row ">
            <h2 class="col">Delete employee </h2>
        </div>

        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4 card-body ">

                    @if (Model.Id != 0 && Model.Photo != null)
                    {
        <div class="form-group col pt-2 px-0">
            <img src="@AdminLTE.ENV.ImagePath@Model.Photo" class="w-100 " alt="Employee" />
        </div>}
  
                </div>
                <div class="col-md-8 px-0">
                    <div class="card-body">

                        <div class="row">
                            <div class="form-group col ">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" disabled />
                              
                            </div>
                            <div class="form-group col ">
                                <label asp-for="Surname"></label>
                                <input asp-for="Surname" class="form-control" disabled />
                               
                            </div>
                        </div>


                        <div class="form-group col px-0">
                            <label asp-for="Patronymic"></label>
                            <input asp-for="Patronymic" class="form-control" disabled />
                           
                        </div>
                        <div class="row">
                            <div class="form-group col ">
                                <label asp-for="Phone"></label>
                                <input asp-for="Phone" class="form-control" disabled />
                        
                            </div>
                            <div class="form-group col ">
                                <label asp-for="TerritorialCommunityId"></label>
                                <input asp-for="TerritorialCommunity.Name" class="form-control" disabled />
                                
                            </div>
                        </div>
                    </div>
                    <div class="card-footer mb-0 pt-0 bg-transparent">
                        <div class="row">
                            <div class="col ">
                                    <input type="submit" class="btn btn-danger col" value="Delete" />
                             
                            </div>
                            <div class="col text-right ">
                                <a asp-action="Index" class="btn btn-info  col"> Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>





@{
                <partial name="_ValidationScriptsPartial" />
}
