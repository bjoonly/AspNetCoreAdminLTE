@model AdminLTE.Models.Employee




<div class="card  mb-3 pb-2 px-auto" style="max-width: 22rem;min-width:22rem; min-height:145px">
    <div class="row h-100">
        <div class="col-md-4 card-body " >

            @if (Model.Id != 0 && Model.Photo != null)
            {
                <div class="form-group col pt-2 px-0 d-flex flex-column" >
                <img src="@AdminLTE.ENV.ImagePath@Model.Photo" class="w-100 my-auto" alt="Employee" />
                 </div>
             }

        </div>
        <div class="col-md-8 px-0 d-flex flex-column">
            <div class="card-body  d-flex flex-column">

                <h5 class="card-title font-weight-bold">@Model.Name @Model.Surname @Model.Patronymic</h5>
                <p class="card-text  mt-auto">@Model.TerritorialCommunity.Name</p>

            </div>
            <div class="card-footer  mb-0 py-0 mt-auto bg-transparent">
                <div class="row ">
                    <div class="col ">
                        <a asp-action="Upsert" asp-controller="Employee" asp-route-id="@Model.Id" class="btn btn-success col w-75 mt-auto">Edit</a>

                    </div>
                    <div class="col text-right ">
                        <a asp-action="ConfirmDelete" asp-controller="Employee" asp-route-id="@Model.Id" class="btn btn-danger col w-75 mt-auto">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>