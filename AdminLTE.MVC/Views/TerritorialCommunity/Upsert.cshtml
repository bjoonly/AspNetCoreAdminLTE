@{ Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml"; }
@model AdminLTE.Models.TerritorialCommunity

@{ var title = "Add territorial community";
    ViewData["Title"] = "TC | Add";}

<form method="post" >
    @if (Model.Id != 0)
    {
        title = "Edit territorial community";
        ViewData["Title"] = "TC | Edit";
        <input asp-for="Id" hidden />
    }
    <div class=" p-3 border bg-white my-3 rounded col col-md-10 col-lg-9 mx-auto">
        <div class="form-group row ">
            <h2 class="col">@title</h2>
        </div>
        <div class="row">
            <div class="col">
                <div class="row">
                    <div class="form-group col ">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="col">
                        <div class="form-group col px-0">
                            <label asp-for="Area"></label>
                            <input asp-for="Area" class="form-control" placeholder="Enter area" />
                            <span class="text-danger" asp-validation-for="Area"></span>
                        </div>
                    </div>
                </div>

                    <div class="form-group col px-0 pt-2 mb-0">
                        <div class="row">
                            <div class="col ">
                                @if (Model.Id != 0)
                                {
                                    <input type="submit" class="btn btn-success   col " value="Update" /> }
                                else
                                {
                                    <input type="submit" class="btn btn-success  col " value="Create" />}
                            </div>
                            <div class="col text-right pr-0">
                                <a asp-action="Index" class="btn btn-info col "> Back</a>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</form>


    @{
        <partial name="_ValidationScriptsPartial" />
    }
    
   
